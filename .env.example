# Telegram Bot Token (required)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Allowed user IDs (comma-separated, required)
ALLOWED_USERS=123456789,987654321

# Tmux session name (optional, defaults to "ccmux")
TMUX_SESSION_NAME=ccmux

# Monitor polling interval in seconds (optional, defaults to 2.0)
MONITOR_POLL_INTERVAL=2.0

# Wait time for file stability before processing (optional, defaults to 2.0)
MONITOR_STABLE_WAIT=2.0
